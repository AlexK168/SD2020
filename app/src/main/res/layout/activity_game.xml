<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    tools:context=".NewBoardActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <GridLayout
        android:id="@+id/my_board"
        android:layout_width="277dp"
        android:layout_height="200dp"
        android:orientation="horizontal" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yTextView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:text="@string/y"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/xEditText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/xTextView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/x"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/yEditText"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center"
            android:inputType="number"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/yTextView"
            app:layout_constraintStart_toEndOf="@+id/yTextView" />

        <EditText
            android:id="@+id/xEditText"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center"
            android:inputType="number"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/xTextView"
            app:layout_constraintStart_toEndOf="@+id/xTextView" />

        <Button
            android:id="@+id/shoot_button"
            android:layout_width="77dp"
            android:layout_height="45dp"
            android:text="@string/shoot"
            app:backgroundTint="#F60000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/yEditText"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/enemy_board"
        android:layout_width="277dp"
        android:layout_height="200dp"
        android:orientation="horizontal" />

</LinearLayout>